<!-- Add New Books Section -->
<section id="addBooks" class="mb-5">
    <div class="card">
        <div class="card-header">
            Add New Books
        </div>
        <div class="card-body">
            <h5 class="card-title">Add a New Book</h5>
            <form id="addBooksForm">
                <div class="form-group">
                    <label for="bookTitle">Book Title</label>
                    <input type="text" class="form-control" id="bookTitle" placeholder="Enter Book Title" required>
                </div>
                <div class="form-group">
                    <label for="bookAuthor">Author</label>
                    <input type="text" class="form-control" id="bookAuthor" placeholder="Enter Author's Name" required>
                </div>
                <div class="form-group">
                    <label for="bookISBN">ISBN</label>
                    <input type="text" class="form-control" id="bookISBN" placeholder="Enter ISBN" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Book</button>
            </form>
        </div>
    </div>
</section>