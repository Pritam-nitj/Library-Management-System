<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System - Member Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }
        header {
            background-color: #6c757d;
            color: #ffffff;
            padding: 15px 0;
            text-align: center;
            font-weight: bold;
        }
        nav {
            margin-bottom: 20px;
        }
        nav .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .navbar-nav .nav-link {
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }
        .navbar-nav .nav-link:hover {
            color: #007bff;
        }
        .container {
            margin-top: 20px;
        }
        .card {
            border-radius: 8px;
            border: none;
            background: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .card-header {
            background-color: #007bff;
            color: #ffffff;
            font-size: 1.3rem;
            font-weight: bold;
        }
        .card-body {
            padding: 20px;
        }
        .issued-book {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding: 20px;
            border: 1px solid #eee;
            border-radius: 8px;
            background-color: #fafafa;
        }
        .issued-book img {
            width: 80px;
            height: auto;
            margin-right: 20px;
            border-radius: 5px;
        }
        .book-details {
            flex-grow: 1;
        }
        .book-details h6 {
            font-weight: 500;
            color: #333;
            margin-bottom: 5px;
        }
        .book-details p {
            margin: 5px 0;
            color: #666;
        }
        .fine-amount {
            margin-top: 10px;
            color: #dc3545;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        footer {
            background-color: #343a40;
            color: #ffffff;
            text-align: center;
            padding: 10px 0;
            margin-top: 40px;
        }
    </style>
</head>
<body>

    <header>
        <h1>Member Dashboard</h1>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Welcome <%= UserInfo.username %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">View Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Search Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Pay Fines</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <!-- View Issued Books Section -->
        <section id="viewIssuedBooks" class="mb-5">
            <div class="card">
                <div class="card-header">
                    Issued Books
                </div>
                <div class="card-body">
                    <h5 class="card-title">Your Issued Books</h5>
                    <% if(UserInfo.NoOfBook > 0) { %>
                        <% UserInfo.IssuedBook.forEach(function(issuedBook) { %>
                            <% if (issuedBook.Ibook) { %>  <!-- Check if Ibook exists -->
                                <div class="issued-book">
                                    <img src="<%= issuedBook.Ibook.bookDetails.image ? encodeURI(issuedBook.Ibook.bookDetails.image) : 'default-image-url.jpg' %>" alt="Book Cover">
                                    <div class="book-details">
                                        <h6>Title: <%= issuedBook.Ibook.bookDetails.title %></h6>
                                        <p>Book ID: <%= issuedBook.Ibook.LbookId %></p>
                                        <p>Date of Issue: <%= new Date(issuedBook.IDate).toLocaleDateString() %></p>
                                        <p>Date of Return: <%= new Date(issuedBook.RDate).toLocaleDateString() %></p>
                                        
                                        <% const returnDate = new Date(issuedBook.RDate); %>
                                        <% const today = new Date(); %>
                                        <% let fine = 0; %>
                                        <% const finePerDay = 2; %> 
                                        <% let overdueDays; %>
                                        <% if (today > returnDate) { %>
                                            <% overdueDays = Math.ceil((today - returnDate) / (1000 * 60 * 60 * 24)); %>
                                            <% fine = overdueDays * finePerDay; %>
                                        <% } %>

                                        <p class="fine-amount">
                                            Fine Amount: 
                                            <% if (fine > 0) { %>
                                                â‚¹<%= fine %> (Overdue by <%= overdueDays %> days)
                                            <% } else { %>
                                                No fine due
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            <% } else { %>
                                <p>Book details not available.</p>
                            <% } %>
                        <% }) %>
                    <% } else { %>
                        <h3 class="text-center text-muted">No Book Issued Yet!</h3>
                    <% } %>
                </div>
            </div>
        </section>
    </div>

    <footer>
        <p>&copy; 2024 Library Management System. All Rights Reserved.</p>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
