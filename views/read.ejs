<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Members - Library Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-10">

    <!-- Page Heading -->
    <h1 class="text-4xl font-bold text-center text-gray-700 mb-8">Registered Members</h1>

    <!-- Back to Home Button -->
    <a href="/Librarian" class="text-blue-600 hover:text-blue-800 transition mb-5">‚Üê Back to Home</a>

    <!-- Responsive Table Wrapper -->
    <div class="overflow-x-auto w-full max-w-6xl">
        <table class="table-auto w-full bg-white rounded-lg shadow-lg">
            <!-- Table Headings -->
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">Role</th>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">Name</th>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">Father's Name</th>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">Email</th>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">No. of Issued Book</th>
                    <th class="px-4 py-3 text-left text-gray-600 font-semibold uppercase">Action</th>
                </tr>
            </thead>

            <!-- Table Body -->
            <tbody>
                <!-- Check if there are users to display -->
                <% if(users.length > 0) { %>
                <!-- Loop through each member -->
                <% users.forEach(function(member) { %>
                <% if(member.role === "member"){ %>
                <tr class="border-t border-gray-300 bg-gray-50 hover:bg-gray-100 transition">

                    <!-- Role -->
                    <td class="px-4 py-3 text-gray-700"><%= member.role %></td>

                    <!-- Username -->
                    <td class="px-4 py-3 text-gray-700"><%= member.username %></td>

                    <!-- Father's Name -->
                    <td class="px-4 py-3 text-gray-700"><%= member.fathersName %></td>

                    <!-- Email -->
                    <td class="px-4 py-3 text-gray-700"><%= member.email %></td>

                    <td class="px-4 py-3 text-gray-700"><%= member.NoOfBook %></td>

                    <!-- Action - Delete User Button -->
                    <td class="px-4 py-3">
                        <a href="/deleteUser/<%= member._id %>" class="text-red-600 hover:text-red-800 font-medium transition">
                            Delete User
                        </a>
                    </td>
                </tr>
                <% } %>
                <% }) %>
                <% } else { %>
                <!-- No Users Message -->
                <tr>
                    <td colspan="5" class="text-center py-8 text-gray-500">
                        No Registered Users Yet!
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
